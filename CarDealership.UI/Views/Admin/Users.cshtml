@model IEnumerable<CarDealership.Models.Identity.User>
@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

@Html.ActionLink("Add a new User", "AddUser", "Admin")

<table>
    <tr>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Email</th>
        <th>Role</th>
        <th></th>
    </tr>
    
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.LastName</td>
            <td>@user.FirstName</td>
            <td>@user.Email</td>
            <td>@user.RoleName</td> <!--BRIDGE TABLE NEED TO KNOW HOW TO HANDLE THAT-->
            <td><a href="~/Admin/EditUser/@user.Id">Edit</a></td>
        </tr>
    }
</table>
<script src="~/Scripts/Admin.js"></script>

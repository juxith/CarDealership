@model IEnumerable<CarDealership.Models.Tables.Special>
@{
    ViewBag.Title = "Index";
}

<div>

    <div class="jumbotron">

        <div id="myCarousel" class="carousel slide" data-ride="carousel" href="~/Home/Specials/">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                @foreach (var special in Model)
                {
                    <li data-target="#myCarousel" data-slide-to="@special.SpecialId"></li>
                }
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" href="~/Home/Specials/">
                <div class="item active">
                    <a href="~/Home/Specials/"><img src="~/Images/background.jpg" class="img-responsive center-block specialsBackground" /></a>
                    <div class="carousel-caption">
                        <h1>TSG SALE</h1>
                        <p>Check out our latest sales right NOW!!!!</p>
                    </div>
                </div>


                @foreach (var cSpecial in Model)
                 {
                    <div class="item">
                        <a href="~/Home/Specials/"><img src="~/Images/background.jpg" class="img-responsive center-block specialsBackground" /></a>
                        <div class="carousel-caption">
                            <h2>@cSpecial.Title</h2>
                            <p>@cSpecial.SpecialDescription</p>
                        </div>
                    </div>
                }


                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
                <div align="center"><a class="btn btn-large btn-danger specialButton" href="@Url.Action("Specials", "Home")" align="center">See Our Specials</a></div>
            </div>
           
        </div>


    </div>

    <h2>Featured Vehicles</h2>
    <div id="featuredVehicles"></div>

</div>

